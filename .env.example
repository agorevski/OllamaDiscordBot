# Example environment variables for the application
# Copy this file to .env and fill in your values

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Ollama API Host (optional, defaults to http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Default AI Model (optional, defaults to first available model)
OLLAMA_DEFAULT_MODEL=dolphin24b

# User Activity Logging (optional, defaults to true)
# Set to 'true' to log user inputs and model outputs to logs/user_activity.log
# Set to 'false' to disable logging
ENABLE_USER_LOGGING=true
